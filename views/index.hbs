
{{# if results}} 
    <div class="col-md-12">
    {{# each results}}
        <div class="container">
            <div class="panel panel-default panel-info">
               
                    <div class="panel-heading row">
                        <div class="col-xs-9">
                             <h3 class="panel-title pull-left">{{this.title}}</h3>
                        </div>
                        <div class="col-xs-3">
                            <form action="/save" method="POST">
                                <input id="article-title" type="hidden" name="title" value="{{this.title}}">
                                <input id="article-link" type="hidden" name="link" value={{this.link}}>
                                <input id="article-blurb" type="hidden" name="blurb" value="{{this.blurb}}">
                                <button id="btnSave"  type="submit" class="btn btn-default pull-right" value="Save">Save</button>
                            </form>
                        </div>
                    </div>
                    <div class="panel-body">
                        {{this.blurb}}
                    </div>
                    <div class="panel-footer"> Read more...<a href="{{this.link}}">{{this.link}}</a></div>
                
            </div>
        </div>
    {{/ each}}
    </div>
{{/if}}


